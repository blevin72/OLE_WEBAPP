@model OLE_WEBAPP.Models.LoginViewModel
@{
    ViewData["Title"] = "Log In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-image: url('/images/ai-generated-8015891_1280.jpeg');
            background-size: cover; /* Adjust the image size to cover the entire body */
            /* Add any other background properties here */
        }

        .login-box {
            width: 300px;
            margin: auto;
            margin-top: 100px;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.7);
            border-radius: 5px;
            text-align: center;
        }

            .login-box input {
                width: 100%;
                padding: 8px;
                margin-bottom: 10px;
                box-sizing: border-box;
            }

            .login-box button {
                width: 100%;
                padding: 8px;
                box-sizing: border-box;
                background-color: brown;
                color: white;
                border: none;
                border-radius: 3px;
                cursor: pointer;
            }

                .login-box button:hover {
                    background-color: black;
                }

        .btn-primary button:hover {
            background-color: black;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px; /* Add margin to the top */
        }

            .btn-container a {
                margin-right: 10px; /* Add margin between buttons */
            }

        .btn {
            padding: 10px 20px;
            background-color: #8b0000; /* Rustic red color for button */
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
        }

            .btn:hover {
                background-color: #4b0000; /* Darker red color on hover */
            }
    </style>
</head>
<body>
    <div class="login-box">
        <h1 style="font-family: 'Creepster'">Log In</h1>
        <form asp-action="Login" asp-controller="LogIn" method="post">
            <input asp-for="Email" type="text" placeholder="Email" required>
            <input asp-for="Password" type="password" placeholder="Password" required>
            <button type="submit">Log In</button>
        </form>
        <div id="loginStatusMessage" class="alert alert-danger" style="display:none;">
            Login Failed
        </div>
        <div class="btn-container">
            <a href="/" class="btn">Back to Home</a>
        </div>
    </div>
    <!-- Include any necessary scripts here -->
</body>
</html>