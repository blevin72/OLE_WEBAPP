@{
    ViewData["Title"] = "New Post";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-image: url('/images/generated-7566256_1280.jpeg');
            background-size: cover; /* Adjust the image size to cover the entire body */
            /* Add any other background properties here */
            color: #8D4004;
            font-family: 'Creepster'
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .post-box {
            background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent black background */
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .post-textarea {
            width: 100%;
            height: 200px; /* Set desired height for the textarea */
            margin-bottom: 10px;
            resize: vertical; /* Allow vertical resizing */
            font-family: 'Creepster';
            color: black;
            background-color: rgba(255, 255, 255, 0.5); /* Semi-transparent white background */
            border: 2px solid black; /* Black border */
            border-radius: 5px;
            padding: 10px;
        }

        .submit-btn {
            padding: 10px 20px;
            background-color: darkgreen;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
        }

            .submit-btn:hover {
                background-color: black;
            }

        .btn {
            padding: 10px 20px;
            background-color: #8b0000; /* Rustic red color for button */
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
        }

            .btn:hover {
                background-color: #4b0000; /* Darker red color on hover */
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Create a New Post</h1>
        <div class="post-box">
            <form method="post" action="#">
                @Html.AntiForgeryToken()
                <textarea class="post-textarea" name="PostContent" maxlength="5000" placeholder="Write your post here..." required></textarea>
                <button type="submit" class="submit-btn">Submit Post</button>
            </form>
        </div>
        <a href="/" class="btn">Back to Home</a>
    </div>
    <!-- Include any necessary scripts here -->
</body>
</html>