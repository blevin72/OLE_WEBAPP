@{
    ViewData["Title"] = "Existing Posts";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-image: url('/images/generated-7566256_1280.jpeg');
            background-size: cover; /* Adjust the image size to cover the entire body */
            /* Add any other background properties here */
            color: darkred; /* Set text color to white for better visibility */
            font-family: 'Creepster';
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .post-box {
            background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent black background */
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .post-text {
            color: white; /* White text color */
            font-family: 'Creepster';
            font-size: 18px;
            line-height: 1.6;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Existing Posts</h1>
        <div class="post-box">
            @if (Model.CommunicationRecord != null && Model.CommunicationRecord.Any())
            {
                @foreach (var post in Model.CommunicationRecord)
                {
                    if (post != null)
                    {
                        <div class="post-container">
                            <div class="post-header">
                                @if (!string.IsNullOrEmpty(post.Sender))
                                {
                                    <strong>Sender:</strong> @post.Sender <br />
                                }
                                @if (!string.IsNullOrEmpty(post.Recipients))
                                {
                                    <strong>Recipients:</strong> @post.Recipients <br />
                                }
                                @if (!string.IsNullOrEmpty(post.Subject))
                                {
                                    <strong>Subject:</strong> @post.Subject <br />
                                }
                                @if (post.TimeSent != null)
                                {
                                    <strong>Time Sent:</strong> @post.TimeSent.ToString("yyyy-MM-dd HH:mm:ss") <br />
                                }
                            </div>
                            <div class="post-body">
                                <p>@post.MessageBody</p>
                                <!-- Add code to display attachments if applicable -->
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                <p>No existing posts found.</p>
            }
        </div>
        <a href="/" class="btn btn-primary" style="background-color: brown">Back to Home</a>
    </div>

    <a href="/" class="btn btn-primary" style="background-color: brown">Back to Home</a>
    </div>
    <!-- Include any necessary scripts here -->
</body>
</html>