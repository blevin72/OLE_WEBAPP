@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            /* Set the background image */
            background-image: url('/images/Our_Final_Epoch_Title_Screen.png');
            /* Set background properties */
            background-size: 115%; /* Cover the entire element */
            background-position: center; /* Center the image */
            background-repeat: no-repeat; /* Do not repeat the image */
            background-blend-mode: inherit;
            background-color: black;
            /* Set dimensions for the container element */
            height: 100vh; /* Full viewport height */
            /* Center the background image */
            display: flex;
            justify-content: center;
            align-items: center;
            /* Add padding to the top to accommodate the navbar */
            padding-top: 50px;
        }

        /* Styling for the title */
        #title {
            color: #8B0000; /* Dark red color for a creepy feel */
            font-family: 'Creepster', cursive; /* Use a spooky font */
            font-size: 5em; /* Set the font size to extra large */
            text-align: center; /* Center the text */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Add a subtle shadow for depth */
            margin-top: 50px; /* Add some top margin */
        }

        /* Styling for the lead paragraph */
        @@keyframes colorChange {
            0% {
                color: darkbrown;
            }

            25% {
                color: darkred;
            }

            50% {
                color: darkorange;
            }

            75% {
                color: darkred;
            }

            100% {
                color: darkbrown;
            }
        }

        .lead {
            /* Your existing styles */
            animation: colorChange 10s infinite;
            text-align: center; /* Center the text */
            font-family: 'Orbitron', sans-serif; /* Use a futuristic font */
            font-size: 24px; /* Set a larger font size */
            letter-spacing: 3px; /* Add spacing between letters */
            line-height: 1.5; /* Increase line height for readability */
            text-transform: uppercase; /* Convert text to uppercase */
            margin-top: 200px;
        }


        /* Styling for Nav Bar */
        .navbar {
            background-color: transparent;
            border-bottom: none;
        }

        .navbar-nav {
            margin: auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .navbar-brand,
            .navbar-nav .nav-link {
                font-family: 'Roboto', sans-serif;
                font-weight: bold;
                color: darkkhaki;
            }

        .navbar-brand {
            font-size: 24px;
        }

        .navbar-nav .nav-link {
            font-size: 18px;
            padding: 10px 15px;
        }

            .navbar-nav .nav-link:hover {
                color: #ffc107;
            }

        .navbar-nav .nav-item.active .nav-link {
            color: #ffc107;
        }

        .dropdown-menu {
            background-color: rgba(0, 0, 0, 0.7);
        }

            .dropdown-menu .dropdown-item {
                color: white;
            }

                .dropdown-menu .dropdown-item:hover {
                    background-color: #ffc107;
                }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="nav">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="About" asp-action="Index">About</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownLogIn" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Log In
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownLogIn">
                            <a class="dropdown-item" asp-controller="LogIn" asp-action="LogIn">Log In</a>
                            <a class="dropdown-item" asp-controller="LogIn" asp-action="Register">Register</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownNews" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            News
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownNews">
                            <a class="dropdown-item" asp-controller="News" asp-action="Seasons">Seasons</a>
                            <a class="dropdown-item" asp-controller="News" asp-action="SpecialEvents">Special Events</a>
                            <a class="dropdown-item" asp-controller="News" asp-action="PatchUpdates">Patch Updates</a>
                            <a class="dropdown-item" asp-controller="News" asp-action="Deals">Deals</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownForum" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Forum
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownForum">
                            <a class="dropdown-item" asp-controller="Forum" asp-action="ExistingPost">Existing Post</a>
                            <a class="dropdown-item" asp-controller="Forum" asp-action="NewPost">Create New Post</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMedia" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Media
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMedia">
                            <a class="dropdown-item" asp-controller="Media" asp-action="Trailers">Trailers</a>
                            <a class="dropdown-item" asp-controller="Media" asp-action="MomentOfTheMonth">Moment Of The Month</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownRankings" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Rankings
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownRankings">
                            <a class="dropdown-item" asp-controller="Rankings" asp-action="SelectServer">Select Server</a>
                            <a class="dropdown-item" asp-controller="Rankings" asp-action="Top100All">Top 100: All</a>
                            <a class="dropdown-itme" asp-controller="Rankings" asp-action="Top25Specific">Top 25: Specific</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownSupport" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Support
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownSupport">
                            <a class="dropdown-item" asp-controller="Support" asp-action="Email">Email</a>
                            <a class="dropdown-item" asp-controller="Support" asp-action="FAQs">FAQs</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="JoinUs" asp-action="JoinUs">Join Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Privacy" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        <p class="lead">
            Thrusted into a post-apocalyptic world, where survival is not just a goal, but a relentless battle against nature and humanity
        </p>
    </div>
    <div class="modal fade" id="loginIndicatorModal" tabindex="-1" role="dialog" aria-labelledby="loginIndicatorModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginIndicatorModalLabel">Logged In</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>You are now logged in.</p>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
    $(document).ready(function () {
        if (@((TempData["ShowLoginIndicator"] != null && (bool)TempData["ShowLoginIndicator"]).ToString().ToLower()))
        {
            TempData["ShowLoginIndicator"] = false;
            $("#loginIndicatorModal").modal("show");
        }
    });
    </script>
</body>
</html>